{% extends "::layout.html.twig" %}
{% block title %}Accueil - Sharine{% endblock %}
{% block section %}
{% endblock %}
{% block login %}
    <div class="container">
        <div class="row">
            <div class="col-lg-offset-2 col-lg-8">
                <div class="nav navbar-inverse">
                    <h1 class="text-center" style="color: #2aabd2">Connexion</h1>
                </div>
                </br>
                <div id="mainn" class=" jumbotron">
                    {% if error is defined %}
                        {% if error %}
                            <div class="alert alert-danger">Pseudo ou mot de passe incorrect.</div>
                        {% endif %}
                    {% endif %}
                    {# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
                    <form action="{{ path('fos_user_security_check') }}" method="post">
                        <div class="form-group">
                            <label for="username">Pseudo :</label>
                            <input type="text" class="form-control" id="username" name="_username" value=""/>
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe :</label>
                            <input type="password" class="form-control" id="password" name="_password"/>
                        </div>
                        <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oublié ?</a>
                        {#<a class="btn btn-info margin-top-15 pull-right" href="{{ path('administration') }}">send mail</a>#}
                        <input type="submit" class="btn btn-info margin-top-15 pull-right" value="Connexion"/>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock login %}
