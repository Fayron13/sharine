{% extends "::layout.html.twig" %}
{% block title %}Nouveau - Sharine{% endblock %}
{% block section %}
    <div class="container">
        <div class="row">
            <div class="col-lg-offset-1 col-lg-10">
                <div class="nav navbar-inverse">
                    <h1 class="text-center" style="color: #2aabd2">Nouvelle annonce</h1>
                </div>
                </br>
                <div id="mainn" class="jumbotron">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                    {{ form_errors(form) }}
                    <div class="form-group">
                        {{ form_label(form.titre, "Titre de l'annonce", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                        <div class="col-sm-4">
                            {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-sm-4">
                            <div style="color:red">{{ form_errors(form.titre) }}</div>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.resume, "Teaser de l'annonce", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                        <div class="col-sm-4">
                            {{ form_widget(form.resume, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-sm-4">
                            <div style="color:red">{{ form_errors(form.resume) }}</div>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.categorie, "Categorie de l'annonce", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                        {{ form_errors(form.categorie) }}
                        <div class="col-sm-4">
                            {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_row(form.image, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                        {{ form_errors(form.mainArticle) }}
                        {{ form_widget(form.mainArticle) }}
                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                        {#<textarea id="sdz_blogbundle_articletype_contenu" name="sdz_blogbundle_articletype[contenu]" required="required"    class="tinymce"></textarea>#}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
    {% block login %}
    {% endblock %}