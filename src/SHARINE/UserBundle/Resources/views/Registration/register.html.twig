{% extends "::layout.html.twig" %}
{% block title %}Accueil - Sharine{% endblock %}
{% block section %}
{% endblock %}
{% block login %}
    <div class="container">
        <div class="row">
            <div class="col-lg-offset-1 col-lg-10">
                <div class="nav navbar-inverse">
                    <h1 class="text-center" style="color: #2aabd2">Inscription</h1>
                </div>
                </br>
                <div id="mainn" class=" jumbotron">
                    {# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
                    {#<form action="{{ path('registration') }}" {{ form_enctype(form) }} method="POST"#}
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                    {{ form_errors(form) }}
                    <div class="form-group">
                        <div class="col-sm-3">
                            {{ form_label(form.username) }}
                        </div>
                        <div class="col-sm-4">
                            {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="col-sm-5">
                            <div style="color:red">{{ form_errors(form.username) }}</div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3">
                            {{ form_label(form.email) }}
                        </div>
                        <div class="col-sm-4">
                            {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="col-sm-5">
                            <div style="color:red">{{ form_errors(form.email) }}</div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3">
                            {{ form_label(form.plainPassword.first) }}
                        </div>
                        <div class="col-sm-4">
                            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="col-sm-5">
                            <div style="color:red">{{ form_errors(form.plainPassword.first) }}</div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3">
                            {{ form_label(form.plainPassword.second) }}
                        </div>
                        <div class="col-sm-4">
                            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="col-sm-5">
                            <div style="color:red">{{ form_errors(form.plainPassword.second) }}</div>
                        </div>
                    </div>
                    <div>
                        <input type="submit" class="btn btn-info margin-top-15 pull-right" value="Valider"/>
                    </div>
                    {{ form_rest(form) }}
                    {#</form>#}

                </div>
            </div>
        </div>
    </div>
{% endblock login %}
